<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>jfinalBlog</display-name>
  <welcome-file-list>
    <welcome-file>/index</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>inHtml</filter-name>
    <filter-class>com.wenhaofan.common.filter.InterceptHtmlFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>inHtml</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
    <filter>
    <filter-name>htmlAction</filter-name>
    <filter-class>com.wenhaofan.common.filter.HtmlActionFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>htmlAction</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>jfinal</filter-name>
    <filter-class>com.jfinal.core.JFinalFilter</filter-class>
    <init-param>
      <param-name>configClass</param-name>
      <param-value>com.wenhaofan.common._config.BlogConfig</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>jfinal</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <context-param>
    <param-name>basePath</param-name>
    <param-value>http://localhost:8080/</param-value>
  </context-param>
</web-app>